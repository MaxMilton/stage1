{
  "name": "stage1",
  "version": "0.0.10",
  "description": "WIP",
  "license": "MIT",
  "repository": "maxmilton/stage1",
  "author": "Max Milton <max@happycode.ltd>",
  "homepage": "https://github.com/maxmilton/stage1",
  "main": "dist/index.js",
  "type": "module",
  "sideEffects": false,
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm run prebuild && NODE_ENV=production node build.mjs && pnpm run postbuild",
    "dev": "NODE_ENV=development node build.mjs",
    "lint": "pnpm run lint:js && pnpm run lint:ts",
    "lint:js": "eslint --ignore-path .gitignore --ext .ts,.js,.mjs,.cjs .",
    "lint:ts": "tsc --project test --noEmit",
    "postbuild": "tsc --emitDeclarationOnly",
    "prebuild": "rm -rf dist; mkdir dist",
    "test": "c8 --all --include=src --reporter=text --reporter=lcovonly uvu -r tsm test '\\.test\\.ts$'"
  },
  "devDependencies": {
    "@types/jsdom": "16.2.13",
    "@types/node": "16.11.1",
    "@typescript-eslint/eslint-plugin": "5.0.0",
    "@typescript-eslint/parser": "5.0.0",
    "c8": "7.10.0",
    "esbuild": "0.13.8",
    "eslint": "7.32.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-config-airbnb-typescript": "14.0.0",
    "eslint-plugin-import": "2.25.2",
    "jsdom": "18.0.0",
    "prettier": "2.4.1",
    "tsm": "2.1.2",
    "typescript": "4.4.4",
    "uvu": "0.5.2"
  },
  "prettier": {
    "arrowParens": "always",
    "endOfLine": "lf",
    "singleQuote": true,
    "trailingComma": "all"
  }
}
