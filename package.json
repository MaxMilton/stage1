{
  "name": "stage1",
  "version": "0.8.0-next.8",
  "type": "module",
  "description": "High-performance JavaScript micro framework",
  "repository": "maxmilton/stage1",
  "author": "Max Milton <max@happyhackers.xyz>",
  "license": "MIT",
  "sideEffects": false,
  "main": "dist/index.js",
  "browser": "dist/browser.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./macro": {
      "types": "./dist/index.d.ts",
      "default": "./dist/macro.js"
    },
    "./browser": {
      "types": "./dist/index.d.ts",
      "import": "./dist/browser.mjs",
      "require": "./dist/browser.js"
    },
    "./reconcile/keyed": {
      "types": "./dist/index.d.ts",
      "default": "./dist/reconcile/keyed.js"
    },
    "./reconcile/non-keyed": {
      "types": "./dist/index.d.ts",
      "default": "./dist/reconcile/non-keyed.js"
    },
    "./reconcile/reuse-nodes": {
      "types": "./dist/index.d.ts",
      "default": "./dist/reconcile/reuse-nodes.js"
    },
    "./dist/*": "./dist/*",
    "./package.json": "./package.json"
  },
  "files": ["dist", "src"],
  "scripts": {
    "build": "bun build.ts",
    "lint": "bun run lint:fmt && bun run lint:js && bun run lint:ts",
    "lint:fmt": "biome format .",
    "lint:js": "eslint --ignore-path .gitignore --ignore-pattern bench --ext .ts,.mjs,.js,.cjs .",
    "lint:ts": "tsc --noEmit",
    "prebuild": "rm -rf dist",
    "test": "bun test --preload ./test/setup.ts test/unit --coverage",
    "test:e2e": "TZ=UTC playwright test"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.0",
    "@playwright/test": "1.44.1",
    "@types/bun": "1.1.3",
    "dts-buddy": "0.4.7",
    "eslint": "9.4.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "18.0.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-unicorn": "53.0.0",
    "happy-dom": "14.12.0",
    "rollup": "4.18.0",
    "terser": "5.31.1",
    "typescript": "5.4.5",
    "typescript-eslint": "7.12.0"
  },
  "overrides": {
    "eslint": "8.x.x"
  }
}
