{
  "name": "stage1",
  "version": "0.1.0",
  "type": "module",
  "description": "WIP",
  "repository": "maxmilton/stage1",
  "homepage": "https://github.com/maxmilton/stage1",
  "author": "Max Milton <max@happycode.ltd>",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm run prebuild && node build.mjs && pnpm run postbuild",
    "dev": "DEV_BUILD=1 node build.mjs",
    "lint": "pnpm run lint:js && pnpm run lint:ts",
    "lint:js": "eslint --ignore-path .gitignore --ext .ts,.js,.mjs,.cjs .",
    "lint:ts": "tsc --project test --noEmit",
    "postbuild": "tsc --emitDeclarationOnly",
    "prebuild": "rm -rf dist; mkdir dist",
    "test": "c8 --all --include=src --reporter=text --reporter=lcovonly uvu -r tsm test '\\.test\\.ts$'"
  },
  "devDependencies": {
    "@types/jsdom": "16.2.13",
    "@types/node": "16.11.11",
    "@typescript-eslint/eslint-plugin": "5.4.0",
    "@typescript-eslint/parser": "5.4.0",
    "c8": "7.10.0",
    "esbuild": "0.14.0",
    "eslint": "8.3.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "16.1.0",
    "eslint-plugin-import": "2.25.3",
    "jsdom": "18.1.1",
    "prettier": "2.5.0",
    "prettier-plugin-pkg": "0.11.1",
    "sirv": "1.0.18",
    "tsm": "2.1.4",
    "typescript": "4.5.2",
    "uvu": "0.5.2"
  },
  "sideEffects": false,
  "prettier": {
    "arrowParens": "always",
    "endOfLine": "lf",
    "singleQuote": true,
    "trailingComma": "all",
    "plugins": [
      "./node_modules/prettier-plugin-pkg"
    ]
  }
}
